<?xml version="1.0" encoding="UTF-8"?>
<Configuration debug="true">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %d traceId=%X{traceId} [%t] %c : %m%n"/>
        </Console>

        <Async name="AsyncSTDOUT">
            <AppenderRef ref="STDOUT"/>
        </Async>
    </Appenders>

    <Loggers>
        <AsyncLogger name="org.apache.log4j.xml" level="info"/>
        <AsyncLogger name="com.netflix" level="error"/>
        <AsyncLogger name="org.apache.http" level="info"/>
        <AsyncLogger name="com.recicar" level="info"/>
        <AsyncLogger name="com.recicar.marketplace" level="debug"/>

        <AsyncRoot level="info">
            <AppenderRef ref="AsyncSTDOUT"/>
        </AsyncRoot> 
    </Loggers>
</Configuration>